pkgname=linux-libxml2
pkgver=2.7.3
pkgrel=1
pkgdesc='linux libxml2 package'
url='http://www.archlinux.org/'
license=('GPL')
arch=('any')
depends=('linux-base')
options=(!strip)
source=('http://critical.ch/distfiles/rpm/i386/fedora/10/libxml2-2.7.3-1.fc10.i386.rpm')
md5sums=('d129a2d036aea982de8cfc176abcecf5')

prepare() {
	rm -f "${srcdir}"/*.rpm
}
package() {
	install -dm755 "${pkgdir}/compat/linux"
	cp -Ra "${srcdir}"/* "${pkgdir}/compat/linux"

	msg "Branding elf files"
	find ${srcdir} \
           -type f -print0 | xargs -0 file \
          | grep ELF | cut -d : -f 1 \
	  | xargs brandelf -t linux
}
