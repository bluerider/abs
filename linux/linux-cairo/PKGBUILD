pkgname=linux-cairo
pkgver=1.8.0
pkgrel=2
pkgdesc='linux cairo'
url='http://www.fedoraproject.org/'
license=('GPL')
arch=('any')
depends=('linux-base' 'linux-fontconfig' 'linux-png' 'linux-xorg-libs')
options=(!strip)
source=(http://critical.ch/distfiles/rpm/i386/fedora/10/cairo-${pkgver}-1.fc10.i386.rpm)
md5sums=('8d9fb08d0500167310d25812c9ecba8d')

package() {
	install -dm755 "${pkgdir}/compat/linux"
	cp -Ra "${srcdir}/usr" "${pkgdir}/compat/linux"

    find ${srcdir} \
         -type f -print0 | xargs -0 file \
        | grep ELF | cut -d : -f 1 \
        | xargs brandelf -t Linux
}
