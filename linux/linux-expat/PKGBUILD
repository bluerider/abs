pkgname=linux-expat
pkgver=2.0.1
pkgrel=2
pkgdesc='linux expat package'
url='http://www.fedoraproject.org/'
license=('GPL')
arch=('any')
depends=('linux-base')
options=(!strip)
source=(http://critical.ch/distfiles/rpm/i386/fedora/10/expat-2.0.1-5.i386.rpm)
md5sums=('4c85a78af415c7bfecdd6a862481999f')

prepare() {
	rm -f "${srcdir}"/*.rpm
}

package() {
	install -dm755 "${pkgdir}/compat/linux"
	cp -Ra "${srcdir}"/* "${pkgdir}/compat/linux"

	msg "Branding elf files"
	find ${srcdir} \
           -type f -print0 | xargs -0 file \
          | grep ELF | cut -d : -f 1 \
	  | xargs brandelf -t linux

}
